#include <iostream>
#include <iomanip>
#include <cmath>
#include <limits>
#include <cctype>

using namespace std;

double get_input (int order);
double bmi (double weight, double height);
bool isnumeric(string number);
string classification (double BMI);
void display (double BMI, double weight, double height);


int main () {
    double weight, height, BMI;
    
    weight = get_input (0);
    height = get_input (1);
    BMI= bmi(weight,height);
    display(BMI,weight,height);
    cout <<  classification(BMI) << endl;
   

}

double get_input (int order) {
    string text [] = { "Weight: ", "Height: " };
    string number;
  
     while (true) {

        cout << text[order];
        cin >> number;

        if (!isnumeric(number) || stod(number) < 1) {
            continue;
        }
        
        return stod(number);
    }
}

bool isnumeric(string number) {
    for (char character : number) {
        if (character == '.') {
        continue;
    }
        if (!isdigit(character)) {
            return false;  
        }
    }

    return true;
}


double bmi (double weight, double height) {
    double bmi = weight/ (pow(height, 2));

    return bmi;
}


string classification(double BMI){ 
    if (BMI < 18.5) {
        return "Your BMI Classification is Underweight.";
    }
    else if (BMI >= 18.5 && BMI <= 24.9){
        return "Your BMI Classification is in Normal Range.";
    }
    else if (BMI >= 25 && BMI <= 29.9){
        return "Your BMI Classification is Overweight.";
    }
    else if (BMI >= 30){
        return "Your BMI Classification is Obese.";
    }
}


void display (double BMI, double weight, double height) {
    cout << "Your BMI is " << BMI << endl;
}
